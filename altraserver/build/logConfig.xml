<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j='http://jakarta.apache.org/log4j/'>

	<appender name="STDOUT" class="org.apache.log4j.ConsoleAppender">
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="[%d{HH:mm:ss}][%-5p][%t]%C{1}.%M - %m%n"/>
		</layout>
	</appender>
	<appender name="DEBUG" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="File" value="logs/debug/debug"/>
		<param name="DatePattern" value="'_'yyyy-MM-dd'.log'"/>
		<param name="Append" value="true"/>
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="[%d{HH:mm:ss}][%t] %C{1}.%M - %m%n"/>
		</layout>
		<filter class="org.apache.log4j.varia.LevelRangeFilter">
			<param name="LevelMin" value="DEBUG" />
			<param name="LevelMax" value="DEBUG" />
		</filter>
	</appender>
	<appender name="INFO" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="File" value="logs/info/info"/>
		<param name="DatePattern" value="'_'yyyy-MM-dd'.log'"/>
		<param name="Append" value="true"/>
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="[%d{HH:mm:ss}][%t] %C{1}.%M - %m%n"/>
		</layout>
		<filter class="org.apache.log4j.varia.LevelRangeFilter">
			<param name="LevelMin" value="INFO" />
			<param name="LevelMax" value="INFO" />
		</filter>
	</appender>
	<appender name="WARN" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="File" value="logs/warn/warn"/>
		<param name="DatePattern" value="'_'yyyy-MM-dd'.log'"/>
		<param name="Append" value="true"/>
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="[%d{HH:mm:ss}][%t] %C{1}.%M - %m%n"/>
		</layout>
		<filter class="org.apache.log4j.varia.LevelRangeFilter">
			<param name="LevelMin" value="WARN" />
			<!--<param name="LevelMax" value="WARN" />-->
		</filter>
	</appender>
	<appender name="PROF" class="org.apache.log4j.RollingFileAppender">
		<param name="File" value="logs/prof/prof"/>
		<param name="MaxFileSize" value="200MB"/>
		<param name="Append" value="true"/>
		<param name="MaxBackupIndex" value="100"/>
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%m%n"/>
		</layout>
		<filter class="org.apache.log4j.varia.LevelRangeFilter">
			<param name="LevelMin" value="INFO" />
		</filter>
	</appender>
	<appender name="PROF_MSGLEN" class="org.apache.log4j.RollingFileAppender">
		<param name="File" value="logs/prof/msglen"/>
		<param name="MaxFileSize" value="200MB"/>
		<param name="Append" value="true"/>
		<param name="MaxBackupIndex" value="100"/>
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%m%n"/>
		</layout>
		<filter class="org.apache.log4j.varia.LevelRangeFilter">
			<param name="LevelMin" value="INFO" />
		</filter>
	</appender>
	<appender name="PROF_EVENT_WD" class="org.apache.log4j.RollingFileAppender">
		<param name="File" value="logs/prof/eventwd"/>
		<param name="MaxFileSize" value="200MB"/>
		<param name="Append" value="true"/>
		<param name="MaxBackupIndex" value="100"/>
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%m%n"/>
		</layout>
		<filter class="org.apache.log4j.varia.LevelRangeFilter">
			<param name="LevelMin" value="INFO" />
		</filter>
	</appender>
	<appender name="CHAT" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="File" value="logs/chat/chat"/>
		<param name="DatePattern" value="'_'yyyy-MM-dd'.log'"/>
		<param name="Append" value="true"/>
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{HH:mm:ss}/%m%n"/>
		</layout>
		<filter class="org.apache.log4j.varia.LevelRangeFilter">
			<param name="LevelMin" value="INFO" />
		</filter>
	</appender>
	<appender name="USER_DISTRIBUT" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="File" value="logs/userdistribut/userdistribut"/>
		<param name="DatePattern" value="'_'yyyy-MM-dd'.log'"/>
		<param name="Append" value="true"/>
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%m%n"/>
		</layout>
		<filter class="org.apache.log4j.varia.LevelRangeFilter">
			<param name="LevelMin" value="INFO" />
		</filter>
	</appender>

	<category name="ServerLogger" additivity='false'>
		<priority value="ALL"/>
		<appender-ref ref="STDOUT"/>
		<appender-ref ref="DEBUG"/>
		<appender-ref ref="INFO"/>
		<appender-ref ref="WARN"/>
	</category>
	<category name="ExtensionMonitor" additivity='false'>
		<priority value="ALL"/>
		<appender-ref ref="PROF"/>
	</category>
	<category name="MsgLengthDebug" additivity='false'>
		<priority value="ALL"/>
		<appender-ref ref="PROF_MSGLEN"/>
	</category>
	<category name="EventWaitingDuration" additivity='false'>
		<priority value="ALL"/>
		<appender-ref ref="PROF_EVENT_WD"/>
	</category>
	<category name="Chat" additivity='false'>
		<priority value="ALL"/>
		<appender-ref ref="CHAT"/>
	</category>
	<category name="UserDistribut" additivity='false'>
		<priority value="ALL"/>
		<appender-ref ref="USER_DISTRIBUT"/>
	</category>

</log4j:configuration>
